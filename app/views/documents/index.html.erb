<p id="notice"><%= notice %></p>

<center><div><h1><strong>PDFs</strong></h1></div></center>

<div class="col-md-12 " style="margin-bottom: 50px; font-size: 2em; ">
  <div class="col-md-4">Upload PDFs</div>
    <div class="col-md-4 btn btn-info" > <strong> <%= link_to 'New PDFs', new_document_path %></strong></div>
</div>

    <% @documents.each do |document| %>


      <div class="card col-md-3" style="margin-bottom: 50px;">
          
         
          <img class="img-circle" src="http://pdfgratuit.com/wp-content/uploads/2017/12/pdf-1-300x300.png"
       alt="Generic placeholder image" width="80%" height="80%">
          
          <div class="card-body col-md-12">
            
              <strong style="overflow: hidden; width: 100%; margin-top: 10px; position: relative;"><center><p><%= document.document_attached_file_name %></p></center>  </strong> 
              <strong style="overflow: hidden; width: 100%; margin-top: 10px; position: relative;"><center><p><%= document.subject %></p></center>  </strong> 
               
            <div class=" col-md-12 btn-group">
              <div class="col-md-6"><h4><%= link_to 'download', document.document_attached.url , :class => 'btn btn-md btn-info' %></h4></div>
              <% if current_user == document.user %>
                
              <div class="col-md-6"><h4><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } , :class => 'btn btn-md btn-info'  %></h4>
              </div>
              <% end -%>
 
              </div>

          </div>
        </div>
    <% end %>

    <% @users.each do |user| %>
      <p><%= user.email %></p><br>
    <%end%>

<br>


